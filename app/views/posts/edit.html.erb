<div class="container">
    <div class="title">
        <h2>編集</h2>
        <%=link_to("/posts") do %>
            <button type="button" class="btn btn-primary">スケジュール一覧</button>
        <%end%>
    </div>
    <div class="form-container">

        <% flash.each do |message_type, message| %>
            <div class="alert"><%= message %></div>
        <% end %>

        <%= render "shared/allert" , obj: @post %>

        <%= form_with model: @post do |f| %>

            <div class="form-group">
                <%= f.label :title ,"タイトル" %>
                <%= f.text_field :title ,class:"form-control" ,id:"title" %>
            </div>

            <div class="form-group">
                <%= f.label :start ,"開始日" %>
                <%= f.date_field :start , class:"form-control" ,id:"datetimepicker"%>
            </div>

            <div class="form-group">
                <%= f.label :end ,"終了日" %>
                <%= f.date_field :end , class:"form-control" ,id:"datetimepicker"%>
            </div>

            <div class="form-check">
                <%= f.check_box :allday,class:"form-check-input", id: :"flexCheckDefault",:as => :boolean %>
                <%= f.label :終日 ,class:"form-check-label", for:"flexCheckDefault"%>
            </div>

            <div class="form-group">
                <%= f.label :memo ,"メモ" %>
                <%= f.text_area :memo ,class:"form-control" ,id:"memo",rows:"5" %>
            </div>

            <%= f.submit "保存" ,class:"btn btn-primary"%>


        <% end %>
    </div>
</div>